{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    ".env"
  ],
  "globalEnv": [
    "DEBUG",
    "AUTH_URL",
    "PROPSTO_ENV",
    "DATABASE_URL",
    "DIRECT_URL",
    "AUTH_SECRET",
    "EMAIL_FROM",
    "EMAIL_SERVER",
    "RESEND_API_KEY",
    "PROPSTO_APP_URL",
    "PROPSTO_HOST"
  ],
  "tasks": {
    "@propsto/constants#test": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "@propsto/constants#test"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "db-setup": {
      "cache": false
    },
    "db-nuke": {
      "cache": false
    },
    "db-studio": {
      "cache": false
    },
    "lint": {},
    "start": {
      "persistent": true,
      "cache": false
    },
    "type-check": {},
    "e2e": {
      "dependsOn": [
        "//#setup:e2e",
        "^build"
      ],
      "outputs": [],
      "passThroughEnv": [
        "PLAYWRIGHT_*",
        "PROPSTO_*"
      ]
    },
    "//#setup:e2e": {}
  }
}