{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    ".env"
  ],
  "globalEnv": [
    "PROPSTO_ENV",
    "DATABASE_URL",
    "AUTH_URL",
    "AUTH_SECRET",
    "EMAIL_FROM",
    "EMAIL_SERVER",
    "RESEND_API_KEY"
  ],
  "tasks": {
    "@propsto/constants#check-env": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "@propsto/constants#check-env"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^db-deploy",
        "^db-generate",
        "^check-env"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db-deploy": {
      "cache": false
    },
    "db-generate": {
      "cache": false
    },
    "db-push": {
      "cache": false
    },
    "lint": {},
    "debug": {
      "dependsOn": [
        "@propsto/constants#check-env"
      ],
      "cache": false,
      "persistent": true
    },
    "test": {},
    "type-check": {}
  }
}
