{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    ".env"
  ],
  "globalEnv": [
    "DEBUG",
    "AUTH_URL",
    "PROPSTO_ENV",
    "DATABASE_URL",
    "DIRECT_URL",
    "AUTH_SECRET",
    "EMAIL_FROM",
    "EMAIL_SERVER",
    "RESEND_API_KEY",
    "PROPSTO_APP_URL",
    "PROPSTO_HOST"
  ],
  "tasks": {
    "@propsto/constants#test": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "@propsto/constants#test"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^db-deploy",
        "^db-generate",
        "^check-env"
      ],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "node_modules/@propsto/**/*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db-setup": {
      "cache": false
    },
    "db-nuke": {
      "cache": false
    },
    "db-studio": {
      "cache": false
    },
    "lint": {},
    "test": {},
    "type-check": {}
  }
}