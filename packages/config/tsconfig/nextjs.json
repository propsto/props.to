{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "allowJs": true,
    "jsx": "preserve",
    "types": [
      "../../global.d.ts",
      "@propsto/logger"
    ],
    "paths": {
      "@components/*": [
        "./src/app/_components/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@root/*": [
        "../../*"
      ]
    },
  },
  "include": [
    "src",
    "next-env.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}