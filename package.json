{
  "name": "props.to",
  "version": "0.1.0",
  "private": true,
  "author": "Leo Giovanetti <leo@props.to>",
  "scripts": {
    "build": "turbo run build",
    "dev": "DEBUG=@propsto:* turbo run --filter !@propsto/email dev",
    "dev:app": "DEBUG=@propsto:* turbo run @propsto/app#dev @propsto/auth#dev @propsto/email#maildev @propsto/data#db-studio",
    "dev:auth": "DEBUG=@propsto:* turbo run @propsto/auth#dev @propsto/email#maildev @propsto/data#db-studio",
    "dev:email": "DEBUG=@propsto:* turbo run @propsto/email#dev",
    "dev:nuke": "turbo run @propsto/data#db-nuke",
    "dev:setup": "turbo run @propsto/data#db-setup",
    "dev:web": "DEBUG=@propsto:* turbo run @propsto/web#dev",
    "e2e": "turbo run e2e --concurrency=1",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "health": "turbo run lint type-check",
    "hk": "ncu --deep && sort-package-json -i '**/node_modules' '**/package.json'",
    "postinstall": "pnpm --filter @propsto/data db-generate",
    "lint": "turbo run lint",
    "prepare": "husky",
    "setup:e2e": "pnpm exec playwright install",
    "setup:hosts": "hostile load hosts.txt",
    "test": "turbo run test",
    "type-check": "turbo run type-check --cache=local:,remote:r"
  },
  "dependencies": {
    "@radix-ui/react-switch": "1.1.3",
    "@tabler/icons-react": "3.29.0",
    "@upstash/ratelimit": "2.0.5",
    "@vercel/blob": "1.1.1",
    "@vercel/kv": "3.0.0",
    "autoprefixer": "10.4.21",
    "cal-sans": "1.0.1",
    "lucide-react": "0.562.0",
    "next": "16.1.4",
    "next-auth": "beta",
    "next-themes": "0.4.6",
    "nodemailer": "7.0.10",
    "postcss": "8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.60.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.18",
    "tailwindcss-animate": "1.0.7",
    "typescript": "5.8.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "16.1.4",
    "@playwright/test": "1.53.2",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "24.0.10",
    "@types/nodemailer": "6.4.17",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "@typescript-eslint/typescript-estree": "8.35.1",
    "baseline-browser-mapping": "2.9.14",
    "browserslist": "4.28.1",
    "dotenv-cli": "8.0.0",
    "eslint": "9.30.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "framer-motion": "12.23.0",
    "hostile": "1.4.0",
    "husky": "9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "18.0.1",
    "prettier": "3.6.2",
    "sort-package-json": "3.4.0",
    "start-server-and-test": "2.0.12",
    "tsx": "4.20.3",
    "turbo": "2.7.5",
    "vitest": "4.0.9"
  },
  "peerDependencies": {
    "@propsto/config": "workspace:*"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "cbor-extract",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@next/eslint-plugin-next": "$@next/eslint-plugin-next",
      "@types/react": "$@types/react",
      "@types/react-dom": "$@types/react-dom",
      "@typescript-eslint/eslint-plugin": "$@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser": "$@typescript-eslint/parser",
      "@typescript-eslint/typescript-estree": "$@typescript-eslint/typescript-estree",
      "baseline-browser-mapping": "$baseline-browser-mapping",
      "browserslist": "$browserslist",
      "eslint": "$eslint",
      "eslint-plugin-import": "$eslint-plugin-import",
      "eslint-plugin-react": "$eslint-plugin-react",
      "eslint-plugin-react-hooks": "$eslint-plugin-react-hooks",
      "lucide-react": "$lucide-react",
      "next": "$next",
      "next-auth": "$next-auth",
      "nodemailer": "$nodemailer",
      "react": "$react",
      "react-dom": "$react-dom",
      "typescript": "$typescript"
    }
  }
}