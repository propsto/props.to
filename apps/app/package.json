{
  "name": "@propsto/app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm dotenv -- next build",
    "dev": "pnpm dotenv -- pnpm next-dev",
    "dotenv": "dotenv -e ../../.env",
    "lint": "eslint",
    "next-dev": "next dev --hostname=$PROPSTO_APP_HOSTNAME --port=$PROPSTO_APP_PORT",
    "next-start": "next start --hostname=$PROPSTO_APP_HOSTNAME --port=$PROPSTO_APP_PORT",
    "start": "pnpm dotenv -- pnpm next-start",
    "test:unit": "vitest run --passWithNoTests",
    "test:unit:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@propsto/auth": "workspace:*",
    "@propsto/config": "workspace:*",
    "@propsto/constants": "workspace:*",
    "@propsto/data": "workspace:*",
    "@propsto/logger": "workspace:*",
    "@propsto/ui": "workspace:*"
  },
  "peerDependencies": {
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "autoprefixer": "*",
    "browserslist": "*",
    "dotenv-cli": "*",
    "eslint": "*",
    "lucide-react": "*",
    "next": "*",
    "next-auth": "*",
    "next-themes": "*",
    "postcss": "*",
    "react": "*",
    "react-dom": "*",
    "tailwind-merge": "*",
    "tailwindcss": "*",
    "typescript": "*",
    "vitest": "*",
    "zod": "*"
  }
}